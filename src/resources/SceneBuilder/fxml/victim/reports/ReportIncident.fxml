<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportIncidentController">

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Report an Incident" />

    <GridPane hgap="10" style="-fx-padding: 10;" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="300" prefWidth="300" />
        </columnConstraints>

        <Label style="-fx-font-weight: bold;" text="Identifier:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="identifierField" promptText="+63-912-345-6789" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label style="-fx-font-weight: bold;" text="Identifier Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="identifierTypeCombo" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label style="-fx-font-weight: bold;" text="Associated Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="associatedNameField" promptText="e.g John Doe" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label style="-fx-font-weight: bold;" text="Attack Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="attackTypeCombo" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label style="-fx-font-weight: bold;" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextArea fx:id="descriptionArea" prefRowCount="5" promptText="Description must be at least 10 characters." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
        <Button fx:id="submitButton" disable="true" onAction="#handleSubmit" style="-fx-background-color: #ff4d4d; -fx-text-fill: white;" text="Submit Report" />
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: green;" text="" />

</VBox>
