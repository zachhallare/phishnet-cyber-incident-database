<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ViewMyReportsController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <Label text="My Incident Reports" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TableView fx:id="reportsTable" prefHeight="500">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="80"/>
            <TableColumn fx:id="dateCol" text="Date Reported" prefWidth="150"/>
            <TableColumn fx:id="attackTypeCol" text="Attack Type" prefWidth="150"/>
            <TableColumn fx:id="perpetratorCol" text="Perpetrator Identifier" prefWidth="200"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
            <TableColumn fx:id="evidenceStatusCol" text="Evidence Status" prefWidth="150"/>
            <TableColumn fx:id="descriptionCol" text="Description" prefWidth="250"/>
            <TableColumn fx:id="reviewedByCol" text="Reviewed By" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>

